rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access for the marketplace items
    match /items/{itemId} {
      allow read: if true;
      allow write: if false; // Keep writes private for now
    }
    
    // Deny all other reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
